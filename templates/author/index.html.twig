{% extends 'base.html.twig' %}

{% block body %}
<html>
<head>

<title>Author List</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        a.button-link {
            text-decoration: none;
        }

        button {
            padding: 5px 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        {% for author in authors %}
        <tr>
            <td>{{ author.id }}</td>
            <td>{{ author.username }}</td>
            <td>{{ author.email }}</td>
            <td>
                <a class="button-link" href="{{ path('updatea', {'id': author.id}) }}">
                    <button>Update</button>
                </a>
                <a class="button-link" href="{{ path('removea', {'id': author.id}) }}">
                    <button>Remove</button>
                </a>
            </td>
        </tr>
        {% endfor %}
    </table>
    <tr>
        <td colspan="4"></td>
        <td>
            <a class="button-link" href="{{ path('adda') }}">
                <button>Add</button>
            </a>
        </td>
        <td>
            <a class="button-link" href="{{ path('listByEmail') }}">
                <button>List by Email</button>
            </a>
        </td>
        <td>
            <button>List by Author</button>
        </td>
    </tr>
</body>
</html>
{% endblock %}
